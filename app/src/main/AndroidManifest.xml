<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.anju.quickbuzzer_301" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ModeSelectionActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ReactionTimer"
            android:label="@string/title_activity_reaction_timer"
            android:parentActivityName=".ModeSelectionActivity" >
        </activity>
        <activity
            android:name=".ReactionTimerActivity"
            android:label="@string/title_activity_reaction_timer"
            android:parentActivityName=".ModeSelectionActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.anju.quickbuzzer_301.ModeSelectionActivity" />
        </activity>
        <activity
            android:name=".StatisticsActivity"
            android:label="@string/title_activity_statistics" >
        </activity>
    </application>

</manifest>
